section.ps-store-list
    .container
        .ps-section__header
            h3 Store list
        .ps-section__content
            .ps-section__search.row
                .col-md-4: .form-group
                    button: i.icon-magnifier
                    input.form-control(type="text" placeholder="Search vendor...")
            .row
                +column({cols: [4, 4, 6, 6, 12]})
                    article.ps-block--store-2
                        .ps-block__content.bg--cover(data-background="img/vendor/store/default-store-banner.png")
                            figure
                                h4 Global Office
                                .ps-block__rating: +rating(true)
                                p 325 Orchard Str, <br> New York, United States (US)
                                p
                                    i.icon-telephone
                                    |  (+053) 77-637-3300
                        .ps-block__author
                            a(href='#').ps-block__user: img(src="img/vendor/store/vendor-150x150.jpg" alt="")
                            a(href='store-detail.html').ps-btn Visit Store
